<h1>施設新規登録</h1>

<%= form_with(model: @room, local: true) do |form| %>
<div>
  <%= form.label :photo, "写真" %>
  <%= form.file_field :photo %>
</div>


<div>
 <%= form_with(model: @room, url: rooms_path, local: true) do |form| %>
  <%= form.label :name,"施設名" %>
  <%= form.text_field :name %>
</div>

<div>
  <%= form.label :description,"施設詳細" %>
  <%= form.text_area :description %>
</div>

<div>
  <%= form.label :price,"料金" %>
  <%= form.number_field :price %>
</div>

<div>
  <%= form.label :address,"住所" %>
  <%= form.text_field :address %>
</div>

  <%= form.submit "登録" %>
<% end %>
<% end %>