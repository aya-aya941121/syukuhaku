<h1>施設検索</h1>

<!-- 検索フォームを作成 -->
<%= form_with(url: search_rooms_path, method: :get) do |f| %>
  <%= f.label :area, "エリア検索" %>
  <%= f.select :area, options_for_select(['東京', '大阪', '京都', '札幌']), prompt: '選択してください' %>

  <%= f.label :keywords, "フリーワード検索" %>
  <%= f.text_field :keywords %>
  
  <%= f.submit "検索" %>
<% end %>

<!-- 検索結果を表示 -->
<h2>検索結果</h2>
<% if @rooms.any? %>
  <% @rooms.each do |room| %>
    <div>
      <h3><%= link_to room.name, room_path(room) %></h3>
      <p><%= room.address %></p>
      <p><%= room.description %></p>
      <p>宿泊料金: <%= room.price %>円/日</p>
    </div>
  <% end %>
<% else %>
  <p>検索結果がありません。</p>
<% end %>