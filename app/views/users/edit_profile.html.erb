<h1>プロフィール編集</h1>

<%= form_with(model: @user, url: update_profile_user_path(@user), method: :patch) do |f| %>
  <%= f.label :name, '名前' %>
  <%= f.text_field :name %>

  <%= f.label :avatar, 'アイコン画像' %>
  <%= f.file_field :avatar %>

  <%= f.label :introduction, '自己紹介' %>
  <%= f.text_area :introduction %>

  <%= f.submit '更新する' %>
<% end %>