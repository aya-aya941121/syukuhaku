

<!DOCTYPE html>
<html>
  <head>
    
    <title>Syukuapp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
 
  </head>

  <body>
    <nav>
      <div class="title">
        <%= link_to "Potepan Share", root_path %>
      </div>
      <div class="profile"> 
        <% if user_signed_in? %>
        <div class="mypage-btn-container" id="mypageBtnContainer">
          <% if current_user.avatar.present? %>
          <%= image_tag(current_user.avatar, alt: current_user.name, class: "avatar") %>
          <% else %>
          <%= image_tag("default-avatar.png", alt: current_user.name, class: "avatar") %>
          <% end %>
          <a href="#" class="dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= current_user.name %>
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <li><%= link_to "施設の新規登録", new_room_path %></li>
            <li><%= link_to "予約済み一覧", reservations_path %></li>
            <li><%= link_to "登録済み一覧", room_list_path %></li>
            <li><%= link_to "アカウント設定", user_path(current_user) %></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
          </ul>
        </div>
        <% else %>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item"><%= link_to "ログイン", new_user_session_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "新規登録", new_user_registration_path, class: "nav-link" %></li>
        </ul>
        <% end %>
      </div>
    </nav>
    <%= yield %>
    <footer>
      <p class="footer-main">Potepan Share</p>
      <p class="footer-sub">Copyright © Potepan Share 2024 All rights reserved</p>
    </footer>
  </body>
</html>

<%= stylesheet_link_tag 'custom', media: 'all', 'data-turbolinks-track': 'reload' %>